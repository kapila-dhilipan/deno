pipeline {
    agent any

    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Copy the Docker Hub credentials configuration file to the Docker configuration directory
                    sh "cp /docker/config.json ~/.docker/config.json"

                    // Build and push the Docker image
                    docker.build("kapila25/front:61").push()
                }
            }
        }

        // The rest of your pipeline stages
    }
}
